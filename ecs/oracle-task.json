{
  "family": "oracle-db-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "cpu": "2048",
  "memory": "4096",
  "containerDefinitions": [
    {
      "name": "oracle-db",
      "image": "gaspergt/oracle-db:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1521,
          "hostPort": 1521
        }
      ],
      "environment": [
        { "name": "ORACLE_PASSWORD", "value": "simon" },
        { "name": "ORACLE_DATABASE", "value": "XE" }
      ]
    }
  ]
}
