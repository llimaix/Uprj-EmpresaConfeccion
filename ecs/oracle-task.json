{
  "family": "oracle-db-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::851725295463:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "oracle-db",
      "image": "gaspergt/oracle-db:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1521,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "ORACLE_PASSWORD", "value": "simon" },
        { "name": "APP_USER", "value": "app_user" },
        { "name": "APP_USER_PASSWORD", "value": "simon" },
        { "name": "ORACLE_DATABASE", "value": "XE" },
        { "name": "ORACLE_EDITION", "value": "express" },
        { "name": "ORACLE_CHARACTERSET", "value": "AL32UTF8" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/oracle-db-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
