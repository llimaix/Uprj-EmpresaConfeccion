{
  "family": "oracle-db-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "oracle-db",
      "image": "gaspergt/oracle-db:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1521,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "ORACLE_PASSWORD", "value": "simon" },
        { "name": "APP_USER", "value": "app_user" },
        { "name": "APP_USER_PASSWORD", "value": "simon" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/oracle-db-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "linuxParameters": {
        "sharedMemorySize": 512
      }
    }
  ]
}
